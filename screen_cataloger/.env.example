# Screen Cataloger Configuration
# Copy this file to .env and adjust settings as needed

# Database path (relative to script location)
DATABASE_PATH=database/captures.db

# Captures directory
CAPTURES_DIR=captures

# OCR Settings
TESSERACT_CMD=/usr/bin/tesseract

# Keyboard shortcuts (use + for combinations)
SCREENSHOT_HOTKEY=ctrl+shift+s
REGION_SCREENSHOT_HOTKEY=ctrl+shift+r
CATALOG_HOTKEY=ctrl+shift+c