modules = ["nodejs-20", "python-3.11"]

[agent]
expertMode = true

[agent.knowledge]
title = "MERGE-CURR-TRIV Interactive Catalog System"
description = "A Node.js web application featuring an interactive catalog system with document management, notes, tasks, and ziggurat curriculum builder. Includes file upload, Kindle integration, and smart categorization features."

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "scrot", "tcl", "tesseract", "tk", "xvfb-run", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37633
externalPort = 3001

[[ports]]
localPort = 42315
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["node", "server.js"]
